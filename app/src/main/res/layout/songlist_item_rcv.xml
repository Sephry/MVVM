<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondBlue"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:padding="10dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/song_list_item_image"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_baseline_music_video_24"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="Music Name : "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Singer Name : "
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Album Name : "
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
                android:id="@+id/song_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="Grind"
                />

            <TextView
                android:id="@+id/song_list_item_singer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Ezhel"
                />

            <TextView
                android:id="@+id/song_list_item_album"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lights Out"
                android:textSize="15dp"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="8dp"
            android:padding="10dp"
            android:layout_margin="12dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>